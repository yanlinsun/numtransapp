
@model NumTransApp.Models.NumberModel

@{
    ViewBag.Title = "Number Transformation";
}

<h2>Number Transformation</h2>
<p>
<pre>
    Transform Number into English currency representation. Please enter your number below and click tranform.
    Number format:
    1. Support delimiter
        1,000.00 or 1000.00 => One Thousand Dollars
    2. Support two decimal places, others will be cut off
        1,000.028 => One Thousand Dollars and Two Cents
    3. Not support negative number
        -100.00 => Invalid
    4. Support omit the integer part, but no omit decimal part
        .1 => Ten Cents, .99 => Ninety Nine Cents, 10. => Invalid format
    5. Maximum number (66 Digit 9).99
</pre>
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.Number)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Number)
                @Html.ValidationMessageFor(m => m.Number)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.TransformedNumber)
            </div>
            <div class="editor-label">
                @Html.DisplayFor(m => m.TransformedNumber, "Please enter number in above text box.")
                @Html.ValidationMessageFor(m => m.TransformedNumber)
            </div>
            <p>
                <input type="submit" value="Transform" />
            </p>
        </fieldset>
    </div>
}
